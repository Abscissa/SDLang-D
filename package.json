		},

		{
			"name": "unittest",
			"targetType": "executable",
			"targetPath": "bin/",
			"targetName": "sdlang-unittest",

			"versions": ["sdlangUnittest", "sdlangTrace"],
			"dflags-dmd": ["-gc"]
